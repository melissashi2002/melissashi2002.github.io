<section class="news">
  <h2>news</h2>
  <ul>
    {% assign news_posts = site.news | sort: 'date' | reverse %}
    {% for post in news_posts limit: 5 %}
      <li>
        <span class="date">{{ post.date | date: "%Y-%m-%d" }}</span>
        <a href="{{ post.url | relative_url }}">{{ post.title }}</a>
      </li>
    {% endfor %}
  </ul>
</section>
